@model PartyInvites.Models.GuestResponse

@{
    ViewBag.Title = "Калькулятор";
}

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>@ViewBag.Title</title>
</head>
<body>
  @using (Html.BeginForm())
  {
    <p>Operand 1: @Html.TextBoxFor(x => x.Operand1) </p> 
    <p>Operand 2: @Html.TextBoxFor(x=> x.Operand2)</p>
    <p>
      @Html.LabelFor(x => x.Operation)
      @Html.DropDownListFor(x => x.Operation, new List<SelectListItem> {
          new SelectListItem() {Text = "+", Value = "+"},
          new SelectListItem() {Text = "-", Value = "-"},
          new SelectListItem() {Text = "*", Value = "*"},
          new SelectListItem() {Text = "/", Value = "/"}
        })
    </p>
     //  <input class="button" type="submit" name="click" value="calculate" />
     //  <input class="button" type="submit" name="click" value="clear" />
   <input type="submit" value="Получить ответ" /> 
   <input type="reset" value="Очистить все поля" >
  }
</body>
</html>